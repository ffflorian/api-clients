{
  "author": "Florian Keller <github@floriankeller.de>",
  "description": "API clients for various services.",
  "devDependencies": {
    "husky": "1.3.1",
    "lerna": "3.13.2",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "tslint": "5.15.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "scripts": {
    "boot": "lerna bootstrap --reject-cycles",
    "build:ts": "lerna run build:ts",
    "build:docs": "lerna run build:docs",
    "clean": "lerna run clean",
    "dist": "yarn clean && yarn build:ts",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:other && yarn lint:ts",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "prettier": "prettier \"**/*.{json,md}\"",
    "release": "lerna publish",
    "test": "yarn lint && yarn test:all",
    "test:all": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
